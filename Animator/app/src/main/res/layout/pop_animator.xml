<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_animator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--大礼物布局-->
    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/svgaImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        app:autoPlay="true"
        app:loopCount="1" />

    <RelativeLayout
        android:id="@+id/rl_520"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_icon520_bg"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@drawable/shape_red_circle_bg" />

        <ImageView
            android:id="@+id/iv_icon520"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="101dp"
            android:background="@drawable/avatar_cat" />

        <TextView
            android:id="@+id/tv_name520"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_icon520_bg"
            android:layout_alignRight="@+id/iv_icon520_bg"
            android:layout_below="@+id/iv_icon520_bg"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="#FFFFFFFF"
            android:textSize="12dp"
            android:text="wuqingsen"/>


        <ImageView
            android:id="@+id/iv_icon521_bg"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/shape_red_circle_bg" />

        <ImageView
            android:id="@+id/iv_icon521"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="101dp"
            android:background="@drawable/avatar_cat" />

        <TextView
            android:id="@+id/tv_name521"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_icon521"
            android:layout_alignRight="@+id/iv_icon521_bg"
            android:layout_below="@+id/iv_icon521_bg"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="#FFFFFFFF"
            android:textSize="12dp"
            android:text="wuqingsen"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_1314"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_love_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/love_bg" />

        <ImageView
            android:id="@+id/iv_icon1_bg"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@drawable/shape_red_circle_bg" />

        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="101dp"
            android:background="@drawable/avatar_cat" />

        <TextView
            android:id="@+id/tv_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_icon1_bg"
            android:layout_alignRight="@+id/iv_icon1_bg"
            android:layout_below="@+id/iv_icon1_bg"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="#FFFFFFFF"
            android:textSize="12dp"
            android:text="wuqingsen"/>

        <ImageView
            android:id="@+id/iv_icon2_bg"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/shape_red_circle_bg" />

        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="101dp"
            android:background="@drawable/avatar_cat" />

        <TextView
            android:id="@+id/tv_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_icon2"
            android:layout_alignRight="@+id/iv_icon2_bg"
            android:layout_below="@+id/iv_icon2_bg"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="#FFFFFFFF"
            android:textSize="12dp"
            android:text="wuqingsen"/>

        <TextView
            android:id="@+id/tv_give"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="送"
            android:textColor="#FFFFFFFF"
            android:textSize="22dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_1314"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/nice_love"
            android:layout_below="@+id/tv_name2"/>

    </RelativeLayout>
</RelativeLayout>